version: '3'
services:
  web:
    depends_on:
     - db
    build: './web'
    ports:
     - "5000:7180"
  db:
    image: postgres
    volumes:
      - /root/db_data:/var/lib/postgresql/data
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: stockerize_prod
